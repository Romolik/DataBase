<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.ru.nsu.shchiptsov.sellers.CreateCardBuyerController">
    <children>
        <Button fx:id="createButton" layoutX="15.0" layoutY="130.0" mnemonicParsing="false" text="Создать">
            <font>
                <Font name="Rockwell" size="18.0" />
            </font>
        </Button>
      <TextField fx:id="firstNameTextField" layoutX="15.0" layoutY="30.0" prefHeight="30.0" prefWidth="200.0" promptText="Имя покупателя">
         <font>
            <Font name="Rockwell" size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="lastNameTextField" layoutX="15.0" layoutY="70.0" prefHeight="30.0" prefWidth="200.0" promptText="Фамилия покупателя">
         <font>
            <Font name="Rockwell" size="13.0" />
         </font>
      </TextField>
      <Button fx:id="exitButton" layoutX="250.0" layoutY="130.0" mnemonicParsing="false" text="Выйти">
         <font>
            <Font name="Rockwell" size="18.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
